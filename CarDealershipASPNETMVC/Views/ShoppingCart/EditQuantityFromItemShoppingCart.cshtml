@model ShoppingCartItemModel

@{
    ViewData["Title"] = "Edit Shopping cart item";
    // EN
    // Get the full path of the existing employee photo for display
    // DE
    // Holen Sie sich den vollständigen Pfad des vorhandenen Mitarbeiterfotos zur Anzeige
    // HU
    // A meglévő alkalmazotti fénykép teljes elérési útja megjelenítésre
    var photoPath = "~/images/" + (Model.CarAccessories.PhotoPath ?? "noimage.jpg");
}

<div class="row">
      <div class="col-md-8 offset-2">
        <form  asp-controller="ShoppingCart" asp-action="EditQuantityFromItemShoppingCart" method="post" enctype="multipart/form-data" class="mt-5">
        <div class="card mb-12">
            <div class="row g-0">
                    <div class="col-md-4">
                        <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
                    </div>
                    <div class="col-md-8">
                        @if (true)
                        {
                            <div class="form-group">
                                <label asp-for="Id" class="control-label"></label>
                                <input asp-for="Id" class="form-control" readonly/>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>                            
                        }
                        <div class="form-group">
                            <label asp-for="CarAccessories.ProductName" class="control-label"></label>
                            <input asp-for="CarAccessories.ProductName" class="form-control" readonly/>
                            <span asp-validation-for="CarAccessories.ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CarAccessories.carAccessoriesProductGroupModel.CAPGName" class="control-label"></label>
                            <input asp-for="CarAccessories.carAccessoriesProductGroupModel.CAPGName" class="form-control" readonly/>
                            <span asp-validation-for="CarAccessories.carAccessoriesProductGroupModel.CAPGName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GrossSaleAmount" class="control-label"></label>
                            <input asp-for="GrossSaleAmount" class="form-control" readonly/>
                            <span asp-validation-for="GrossSaleAmount" data-valmsg-replace="false" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CarAccessories.carAccessoriesUnitModel.UnitName" class="control-label"></label>
                            <input asp-for="CarAccessories.carAccessoriesUnitModel.UnitName" class="form-control" readonly/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <select asp-for="Quantity" class="form-control" asp-items="ViewBag.Quantity"></select>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div> 
                        <div>
                            <button type="submit" class="btn-primary">Submit</button>
                        </div>
                    </div>
            </div>
        </div>
    </form>
     </div>
</div>
@section Scripts{
<script>
    $(function () { 
        $("#GrossSaleAmount").on("keypress keyup blur", function (event) { 
            $(this).val($(this).val().replace(/[^0-9\.]/g, ''));
            if ((event.which != 46 || $(this).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57)) {
                event.preventDefault();
            }
        });
    })
</script>
}
